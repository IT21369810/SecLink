<Window x:Class="SecLinkApp.AcceptDeclineWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Accept or Decline Transfer" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="File Transfer Request" FontWeight="Bold" FontSize="16" Margin="0 0 0 10"/>
            <TextBlock Text="Sender:" FontWeight="Bold" Width="75" HorizontalAlignment="Left" Margin="0,10,0,0" Height="15"/>
            <TextBlock x:Name="SenderNameTextBlock" Width="230" HorizontalAlignment="Left" Margin="70,-16,0,0" Height="15"/>
            <TextBlock Text="Total File Size:" FontWeight="Bold" Margin="0 10 0 0" Width="90" HorizontalAlignment="Left"/>
            <TextBlock x:Name="TotalFileSizeTextBlock" Margin="100,-16,0,0" HorizontalAlignment="Left" Width="210"/>

            <TextBlock Text="Files:" FontWeight="Bold" Margin="0 10 0 0"/>
            <ListBox x:Name="FilesListBox" Margin="0 0 0 10"/>
            <StackPanel Orientation="Horizontal">
                <Button Content="Accept" Click="AcceptButton_Click" Margin="50,0,10,0" Width="100" Background="#FF104C00" Foreground="#FF08FF00" Cursor="Hand"/>
                <Button Content="Decline" Click="DeclineButton_Click" Width="100" Margin="50,0,0,0" Background="#FF580000" Foreground="Red" Cursor="Hand"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
