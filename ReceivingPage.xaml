<Page x:Class="SecLinkApp.ReceivingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="ReceivingPage" Height="700">
    <Grid Background="White">
        <StackPanel>
            <TextBox Text="Retrieve Your Files:" FontSize="22" FontWeight="Bold" IsReadOnly="True" BorderBrush="{x:Null}" Foreground="Black" Margin="30,30,0,0"/>
            <TextBlock Text="Enter the hash value of the file to retrieve:" FontSize="14" Foreground="#FF7F7F7F" Margin="50,10,0,0"/>
            <TextBox x:Name="HashTextBox" Margin="50,10,0,0" Width="500" Height="35"/>
            <Button Content="Retrieve" Click="RetrieveButton_Click" Width="110" HorizontalAlignment="Right" Margin="0,10,15,0" Height="25" Background="#FF690D0D" Foreground="White" BorderBrush="Black"/>
            <TextBlock x:Name="MessageTextBlock" Foreground="Red" Margin="10" Height="25" Visibility="Collapsed"/>
        </StackPanel>
    </Grid>
</Page>
