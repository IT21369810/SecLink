<Window x:Class="SecLinkApp.Setup3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Face Recognition" Height="450" Width="800">
    <Grid>
        <Image Name="CameraFeed" HorizontalAlignment="Left" VerticalAlignment="Top" Width="303" Height="222" Margin="82,84,0,0"/>
        <TextBlock Name="StatusTextBlock" HorizontalAlignment="Left" VerticalAlignment="Top" Width="318" Height="30" Margin="82,312,0,0"/>
        <Rectangle Stroke="White" Margin="-2,-2,740,-21" Fill="#FF690D0D"/>
        <Button x:Name="AuthenticateButton" Content="Authenticate" Click="AuthenticateButton_Click" HorizontalAlignment="Left" Height="20" Margin="82,347,0,0" VerticalAlignment="Top" Width="318" BorderBrush="Black" Background="#FF690D0D" Foreground="White" Cursor="Hand"/>
        <TextBlock TextWrapping="Wrap" Margin="400,68,-115,99" FontSize="10"><Run FontWeight="Bold" Text="1."/><Run Text=" Capture Your Face:"/><LineBreak/><Run Text="        1.1 Position yourself in front of the camera."/><LineBreak/><Run Text="        1.2 The application will automatically detect and capture your face."/><LineBreak/><Run/><LineBreak/><Run FontWeight="Bold" Text="2."/><Run Text=" Enter Your Username:"/><LineBreak/><Run Text="         2.1 Type your username into the provided text box."/><LineBreak/><Run Text="         2.2 Double-check the entered username for accuracy."/><LineBreak/><Run/><LineBreak/><Run FontWeight="Bold" Text="3"/><Run Text=". Register Your Face:"/><LineBreak/><Run Text="         3.1 Click the &quot;Register&quot; button to save your face and username in the system."/><LineBreak/><Run/><LineBreak/><Run FontWeight="Bold" Text="4."/><Run Text=" Authenticate Your Face:"/><LineBreak/><Run Text="          4.1 Click the &quot;Authenticate&quot; button to verify your face against the registered data."/><LineBreak/><Run Text="             "/></TextBlock>
        <Label Content="Instructions for Face Recognition Setup:" Margin="141,10,-75,313" FontFamily="Franklin Gothic Medium" FontSize="20"/>
        <TextBlock TextWrapping="Wrap" Margin="447,252,208,160"><Run FontWeight="Bold" Text="Enter Your Username:"/></TextBlock>
        <Button x:Name="RegisterButton" Content="Register" Click="RegisterButton_Click" HorizontalAlignment="Left" Height="22" Margin="497,309,0,0" VerticalAlignment="Top" Width="273" BorderBrush="Black" Background="#FF690D0D" Foreground="White" Cursor="Hand"/>
        <Button Content="Back" Click="BackButton_new_Click" HorizontalAlignment="Left" Height="30" Margin="470,374,0,0" VerticalAlignment="Top" Width="92" BorderBrush="Black" Background="#FF690D0D" Foreground="White" Cursor="Hand"/>
        <TextBox Name="NameTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="273" Height="30" Margin="497,274,0,0"/>
    </Grid>
</Window>
